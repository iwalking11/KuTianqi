<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--tools:context="com.gaopinwei.kutianqi.activity.AddNotebookActivity"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#2c68a1"
        >

        <ImageView
            android:id="@+id/imageView_file_add"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:src="@mipmap/img_cancel"/>

        <EditText
            android:id="@+id/editText_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="标题"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/imageView_add_pic"
            android:layout_gravity="center"
            android:src="@mipmap/img_addimg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/imageView_success_add"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:src="@mipmap/img_yes"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@mipmap/img_jsb_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll011"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_innotebook_date"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1.4"
                android:text="2015/11/12"
                android:textColor="#505050"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:id="@+id/textView_innotebook_weekday"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="星期五"
                android:textColor="#505050"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView_innotebook_weather"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="晴"
                android:textColor="#505050"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"/>

        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView_note"
            android:src="@mipmap/ic_cehua01"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <EditText
            android:id="@+id/edittext_write_notebook"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:hint="写点什么尼...."
            android:layout_gravity="left|top"
            android:textColor="#000"
            android:gravity="top"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="15dp"
            />



    </LinearLayout>


</LinearLayout>
