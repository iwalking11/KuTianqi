<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--android:background="@color/selector_color_city_list_background"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/small_edit_cicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/city_delete_normal"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/main_icon_wind" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text=" 北京市"
            android:textColor="#e1e9edf4"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="7/4℃"
            android:textColor="#e1a3bdef"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/skin_delete"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>